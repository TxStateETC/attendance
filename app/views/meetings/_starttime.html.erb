<label for="meeting_startdate"><%=t 'meeting.start_datetime' %>:</label>
<input id="meeting_startdate" type="text" class="control" name="meeting_startdate" size="10" value="<%= @meeting.starttime.strftime('%Y-%m-%d') %>" />
<span><%=t 'meeting.at' %></span>
<input id="meeting_starttime" type="text" class="control" name="meeting_starttime" size="8" value="<%= @meeting.starttime.strftime('%l:%M%P') %>" />
